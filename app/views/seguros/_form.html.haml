= simple_form_for @seguro do |f|
  - if @seguro.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seguro.errors.count, "error")} prohibited this seguro from being saved:"
      %ul
        - @seguro.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.association :supplier
  .field
    = f.association :user
  .field
    = f.input :numero_contrato
  .field
    = f.input :factura_numero
  .field
    = f.input :factura_autorizacion
  .field
    = f.date_select :factura_fecha
  .field
    = f.date_select :fecha_inicio_vigencia
  .field
    = f.date_select :fecha_fin_vigencia
  .actions
    = f.submit 'Save'
