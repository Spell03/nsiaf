= render 'encabezado', seguro: @seguro

%table.table.table-striped.table-condensed.table-bordered.alineacion-media.valorado
  %thead
    %tr
      %th
      %th.text-center Código
      %th.col-xs-7 Descripción
      %th Cuenta
      %th.text-right Precio
  %tbody
    - if @activos.present?
      - @activos.each_with_index do |activo, index|
        %tr
          %td= index + 1
          %td.text-center= activo.code
          %td= activo.description
          %td= activo.cuenta
          %td.number= activo.precio
      %tr
        %th{ colspan: "3" }
        %th.text-right Total
        %th.number= @sumatoria
