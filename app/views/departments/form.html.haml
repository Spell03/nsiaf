.page-header
  %h2= t("departments.title.#{params[:action]}")

.col-sm-9.column.col-sm-offset-1
  = simple_form_for @department, html: { class: 'form-horizontal' } do |f|
    = f.input :code
    = f.input :name
    = f.association :building, collection: status_active(Building), include_blank: false

    = render 'shared/form_buttons'
