.page-header
  %h2= t("auxiliaries.title.#{params[:action]}")

.col-sm-9.column.col-sm-offset-1
  = simple_form_for @auxiliary, html: { class: 'form-horizontal' } do |f|
    = f.input :code, required: true
    = f.input :name, required: true
    = f.association :account, include_blank: false, required: true

    = render 'shared/form_buttons'
