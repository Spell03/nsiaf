.content-wrap
  %h4= t('sessions.log_in')
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form' })  do |f|
    .form-group
      .col-md-12
        = f.text_field :username, autofocus: true, class: 'form-control', placeholder: User.human_attribute_name('username')
    .form-group
      .col-md-12
        = f.password_field :password, class: 'form-control', placeholder: User.human_attribute_name('password')

    %div= f.submit t('general.btn.sign_in'), class: 'btn btn-primary login'
